<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mobanker.voice.dao.auth.VoiceConfigDetailMapper">
    <resultMap id="getMap" type="com.mobanker.voice.model.entity.auth.VoiceConfigDetailEntity"/>

    <!--所有的字段-->
    <sql id="ALL_COLUMN">
        id,
        status,
        preset_id,
        type,
        type_content,
        config_key_id,
        create_user,
        create_time,
        update_user,
        update_time
    </sql>

    <sql id="WHERE_COLUMN">
        <where>
            1=1
            <if test="userId != null and userId !=''">
                and user_id = #{userId}
            </if>

            <if test="updateTime != null and updateTime !=''">
                <![CDATA[	and create_time <= #{updateTime}   ]]>
            </if>
        </where>
    </sql>

    <!--保存预设文本子表(关键词列表)-->
    <insert id="saveVoiceConfigDetail">
        insert into mobanker_syd.syd_voice_config_detail
        (status,preset_id,type,type_content,config_key_id,create_time,create_user,update_time,update_user)
        values
        ('1',#{presetId},#{type},#{typeContent},#{configKeyId},now(),#{createUser},now(),#{updateUser})
    </insert>


    <update id="updateStatus">

    </update>
    <!--查询所有关键词-->
    <select id="findVoiceConfigKeyWords" resultMap="getMap">
        select *
        from mobanker_syd.syd_voice_config_detail
        where type = '1' and status = '1'
    </select>
    <!--根据关键词的id查询模糊词-->
    <select id="findVoiceConfigFuzzyWords" resultMap="getMap">
        select *
        from mobanker_syd.syd_voice_config_detail
        where type = '3' and status = '1' and config_key_id = #{entity.id}
    </select>
    <!--删除所有模糊词-->
    <delete id="deleteAllFuzzyWords">
        delete from mobanker_syd.syd_voice_config_detail
        where type = '3'
    </delete>
    <!--批量插入模糊词-->
    <insert id="saveFuzzyWords">
        insert into mobanker_syd.syd_voice_config_detail
        (status, type, type_content, config_key_id) values
            <foreach collection="entity.resultList" item="item" index="index"
                     open="" close="" separator=",">
                ('1' , '3' , #{item} , #{entity.configKeyId})
            </foreach>
    </insert>


    <delete id="deleteConfigDetailByPresetId">
        delete from
        mobanker_syd.syd_voice_config_detail
        where preset_id=#{presetId} and status='1'

    </delete>
</mapper>
